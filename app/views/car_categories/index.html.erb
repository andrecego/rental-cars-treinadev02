<h1>Categorias de carro</h1>
<p>
  <%= link_to  "Cadastrar nova categoria", new_car_category_path %>
  <%= link_to 'Voltar', root_path %>
</p>
<% if @car_categories.empty? %>
  <p>Não existe nenhuma categoria de carro cadastrada</p>
<% else %>
  <table>
    <thead>
      <th>Nome</th>
      <th>Taxa Diária</th>
      <th>Seguro do carro</th>
      <th>Seguro contra terceiros</th>
    </thead>
    <tbody>
      <% @car_categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= number_to_real(category.daily_rate) %></td>
          <td><%= number_to_real(category.car_insurance) %></td>
          <td><%= number_to_real(category.third_party_insurance) %></td>
          <td><%= link_to  "Editar", edit_car_category_path(category) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
